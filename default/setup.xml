<setup>
 <block title="Steam Usernames" endpoint="configs/conf-steam" entity="userNames">
  <input field="userNames">
    <label>Usernames (comma-separated):</label>
    <type>text</type>
  </input>
  <text>Shown in vanity URL (https://steamcommunity.com/id/usernameA)</text>
  <text>For example: UsernameA,76543212345678909,UsernameB,78909876543212345,UsernameC</text>
 </block>
 <block title="Steam Credentials" endpoint="storage/passwords" entity="steamAPI*" mode="iter" eai_strict="false">
  <input field="password">
    <label>Key for the Steam API:</label>
    <type>text</type>
  </input>
  <text>Obtained from https://steamcommunity.com/dev/apikey</text>
 </block>
</setup>
